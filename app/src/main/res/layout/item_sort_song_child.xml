<android.support.constraint.ConstraintLayout android:id="@+id/sort_parent"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/image"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_effect"
    tools:background="@color/background_panel_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/sort_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sort_descending"
        android:tint="@color/FlatWhite"
        android:padding="12dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/sort_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/sort_image"
        app:layout_constraintBottom_toBottomOf="@id/sort_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/sort_by_name_asc"
        android:gravity="center_vertical"
        android:textColor="@color/FlatWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="6dp"
        android:maxLines="1"
        android:ellipsize="end"/>
</android.support.constraint.ConstraintLayout>