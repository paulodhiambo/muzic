<?xml version="1.0" encoding="utf-8"?>
<com.odhiambopaul.musicr.ui.widget.rounded.DarkenRoundedBackgroundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/tools"
    android:background="@android:color/transparent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
           >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >
            <com.odhiambopaul.musicr.ui.widget.ToggleButton
             android:id="@+id/music_controller_toggle"
             android:layout_width="match_parent"
             android:layout_height="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
             android:alpha="0"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/music_controller_toggle"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Danh sách phát không tên 1"
                android:textSize="36sp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintEnd_toStartOf="@+id/saveList"
                />
            <ImageView
                android:id="@+id/saveList"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:padding="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/title"
                android:src="@drawable/share_black"
                android:rotation="180"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/title"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:textColor="@android:color/black"
                android:text="Various Artist"
                android:textSize="24sp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="10dp" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="@id/description"
                app:layout_constraintTop_toBottomOf="@id/description"
                fancy:fb_defaultColor="@color/FlatWhite"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="@android:color/black"
                fancy:fb_textColor="@android:color/black"
                fancy:fb_radius="15dp"
                android:text="12 bài hát, 38 phút"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                fancy:fb_useSystemFont="true"
                />
            <ImageView
                android:id="@+id/repeat"
                android:layout_width="100dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@id/detail"
                app:layout_constraintStart_toStartOf="@id/detail"
                android:src="@drawable/repeat"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/count_round_drawable"/>
            <ImageView
                android:id="@+id/shuffle"
                android:layout_width="100dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="@id/repeat"
                app:layout_constraintStart_toEndOf="@id/repeat"
                android:src="@drawable/smooth_shuffle"
                android:layout_marginStart="10dp"
                android:padding="12dp"
                android:background="@drawable/count_round_drawable"/>

        </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingBottom="50dp"/>
    </android.support.design.widget.CoordinatorLayout>

</com.odhiambopaul.musicr.ui.widget.rounded.DarkenRoundedBackgroundFrameLayout>