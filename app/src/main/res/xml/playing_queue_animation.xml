<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="350">
    <!--    <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/recycler_view"
            />-->
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/playlist_title"
            app:layout_constraintBottom_toBottomOf="@id/playlist_title"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/lyric"
            app:layout_constraintStart_toEndOf="@id/down"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_16dp_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>
        <Constraint
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/down"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/save_as"
            app:layout_constraintStart_toEndOf="@id/down"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_16dp_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:alpha="0"
            android:visibility="invisible"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:clickable="true"
            android:focusable="true"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/playlist_title"
            app:layout_constraintBottom_toBottomOf="@id/playlist_title"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/lyric"
            app:layout_constraintStart_toEndOf="@id/down"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_16dp_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0"
            android:visibility="invisible"
            android:paddingBottom="4dp"/>
        <Constraint
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/playlist_title"
            app:layout_constraintBottom_toBottomOf="@id/playlist_title"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/save_as"
            app:layout_constraintStart_toEndOf="@id/down"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple_16dp_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>
    </ConstraintSet>
</MotionScene>